<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayoutItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--<ImageView android:layout_margin="5dip" android:id="@+id/ImageViewItem"-->
    <!--android:layout_height="48dip" android:layout_width="48dip"></ImageView>-->
    <TextView
        android:id="@+id/TextViewItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxWidth="250dip"
        android:text="Title"
        android:textColor="#000000"
        android:textSize="16dip" />

    <TextView
        android:id="@+id/TextViewStock_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewItem"
        android:paddingRight="10dp"
        android:text="Stock :"
        android:textColor="#000000"
        android:textSize="13dip" />

    <TextView
        android:id="@+id/TextViewStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewItem"
        android:layout_toRightOf="@+id/TextViewStock_Title"
        android:text=""
        android:textSize="13dip" />


    <TextView
        android:id="@+id/TextViewPrice_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewStock_Title"
        android:paddingRight="10dp"
        android:text="Price  :"
        android:textColor="#000000"
        android:textSize="13dip" />

    <TextView
        android:id="@+id/TextViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextViewStock_Title"
        android:layout_toRightOf="@+id/TextViewPrice_Title"
        android:text=""
        android:textSize="13dip" />

    <TextView
        android:id="@+id/TextViewQuantity_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity:"
        android:textColor="#000000"
        android:layout_below="@+id/TextViewPrice_Title"
        android:textSize="13dip"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/TextViewQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000000"
        android:layout_below="@+id/TextViewPrice"
        android:layout_toRightOf="@+id/TextViewQuantity_Title"
        android:textSize="13dip" />

</RelativeLayout>
